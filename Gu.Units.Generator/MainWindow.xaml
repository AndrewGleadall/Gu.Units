<Window x:Class="Gu.Units.Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:generator="clr-namespace:Gu.Units.Generator"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="525"
        Height="350"
        d:DataContext="{d:DesignInstance generator:ViewModel}"
        mc:Ignorable="d">
    <DockPanel>
        <Menu DockPanel.Dock="Top" IsMainMenu="True">
            <MenuItem Header="_File">
                <MenuItem Command="Save" />
            </MenuItem>
            <MenuItem Header="_Edit" />
            <MenuItem Header="_View" />
            <MenuItem Header="_Window" />
            <MenuItem Header="_Help" />
        </Menu>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <TextBlock Text="NameSpace" />
            <TextBox MinWidth="200" Text="{Binding NameSpace}" />
        </StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <GroupBox Grid.Column="0" Header="Prefixes">
                <DataGrid ItemsSource="{Binding Prefixes}" />
            </GroupBox>
            <GroupBox Grid.Column="1" Header="Units">
                <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding SiUnits}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding ClassName}" Header="Unit" />
                        <DataGridTextColumn Binding="{Binding Symbol}" Header="Symbol" />
                        <DataGridTextColumn Binding="{Binding Quantity}" Header="Quantity" />
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
            <GroupBox Grid.Column="2" Header="Composite units">
                <DataGrid AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          ItemsSource="{Binding UnitData}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding ValueTypeName}" Header="Type" />
                        <DataGridTextColumn Binding="{Binding UnitTypeName}" Header="UnitTypeName" />
                        <DataGridTextColumn Binding="{Binding Symbol}" Header="Symbol" />
                        <DataGridTextColumn Binding="{Binding Conversion}" Header="Conversion" />

                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>
